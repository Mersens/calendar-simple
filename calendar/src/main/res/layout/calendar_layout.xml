<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_action_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2017-05"
            android:textColor="@color/base_color_text_black"
            android:textSize="@dimen/title_size" />

        <ImageView
            android:id="@+id/btn_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_action_right" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_weeks"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/text_sun"
            android:textColor="@color/base_color_text_black"
            android:textSize="@dimen/week_title_size" />

        <TextView
            android:id="@+id/tv_mon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/text_mon"
            android:textColor="@color/base_color_text_black"
            android:textSize="@dimen/week_title_size" />

        <TextView
            android:id="@+id/tv_tue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/text_tue"
            android:textColor="@color/base_color_text_black"
            android:textSize="@dimen/week_title_size" />

        <TextView
            android:id="@+id/tv_wed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/text_wed"
            android:textColor="@color/base_color_text_black"
            android:textSize="@dimen/week_title_size" />

        <TextView
            android:id="@+id/tv_thu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/text_thu"
            android:textColor="@color/base_color_text_black"
            android:textSize="@dimen/week_title_size" />

        <TextView
            android:id="@+id/tv_fir"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/text_fir"
            android:textColor="@color/base_color_text_black"
            android:textSize="@dimen/week_title_size" />

        <TextView
            android:id="@+id/tv_sat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/text_sat"
            android:textColor="@color/base_color_text_black"
            android:textSize="@dimen/week_title_size" />
    </LinearLayout>

    <GridView
        android:id="@+id/grid_days"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@drawable/calendar_select_bg"
        android:numColumns="7" />
</LinearLayout>
